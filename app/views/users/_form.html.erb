<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :digitalproject %><br>
    <fieldset class="inline">
	    <label class="block-label" for="digitalproject_yes" data-target="digitalprojectname">
	      <%= radio_button_tag(:digitalproject, "yes") %>
	      Yes
	    </label>
	    <label class="block-label" for="digitalproject_no">
	      <%= radio_button_tag(:digitalproject, "no") %>
	      No
	    </label>
	    <div class="panel-indent js-hidden" id="digitalprojectname">
          <%= f.label :digitalprojectname %><br>
          <%= f.text_field :digitalprojectname %>
        </div>
	 </fieldset>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
